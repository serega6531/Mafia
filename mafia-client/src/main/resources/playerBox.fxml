<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="260.0" prefWidth="160.0" style="-fx-border-color: #cccccc;"
            xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
   <ImageView fx:id="roleImage" fitHeight="100.0" fitWidth="133.0" layoutX="13.0" layoutY="14.0" pickOnBounds="true"
              preserveRatio="true"/>
   <Label fx:id="playerNameLabel" layoutX="12.0" layoutY="116.0" prefHeight="22.0" prefWidth="133.0" text="Игрок N">
      <font>
         <Font size="16.0"/>
      </font>
   </Label>
   <Label fx:id="playerRoleLabel" layoutX="12.0" layoutY="144.0" text="Роль: Неизвестно">
      <font>
         <Font size="14.0"/>
      </font>
   </Label>
   <Button fx:id="voteButton" layoutX="22.0" layoutY="182.0" mnemonicParsing="false" onAction="#onVoteButtonPress"
           prefHeight="42.0" prefWidth="116.0" text="Проголосовать" visible="false"/>
   <Label fx:id="deathReasonLabel" layoutX="12.0" layoutY="171.0" prefHeight="22.0" prefWidth="78.0" text="Застрелен"
          visible="false">
      <font>
         <Font size="14.0"/>
      </font>
   </Label>
</AnchorPane>
